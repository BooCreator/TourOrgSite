@{
    Int32 UserID = (this.ViewBag.UserID == null) ? -1 : this.ViewBag.UserID;
    Boolean SliderOn = (this.ViewBag.Slider == null) ? false : this.ViewBag.Slider;
}

<header>
    <div class="overtop">
        @if (UserID > -1)
        {
            <div class="profile">
                <div>
                    <button onclick="location.href='/Home/Profile'">
                        <img src="~/Data/img/Profile_icon.png"> Профиль
                    </button>
                    <button onclick="location.href='/Account/Logoff'">Выйти</button>
                </div>
            </div>
        }
        else
        {
            <div class="profile">
                <div>
                    <button onclick="Show('.login')">Войти</button>
                    <button onclick="Show('.register')">Регистрация</button>
                </div>
            </div>
        }
    </div>
    <div class="head">
        <div class="logo">
            <img src="~/Data/img/full_logo.png">
        </div>
        <div class="contacts">
            <div class="phones">
                <h2>+375(33)124-87-95</h2>
                <h2>+375(44)984-57-12</h2>
            </div>
            <button onclick="">
                <div>
                    <img src="~/Data/img/phone.png">
                    Заказать звонок
                </div>
            </button>
        </div>
    </div>
    @{Html.RenderPartial("_MainMenu");}

    @{Html.RenderPartial("_FindMenu");}


    @if (SliderOn)
    {
        <div class="page-content slider">
            <div id="logoImages" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#logoImages" data-slide-to="0" class="active"></li>
                    <li data-target="#logoImages" data-slide-to="1"></li>
                    <li data-target="#logoImages" data-slide-to="2"></li>
                    <li data-target="#logoImages" data-slide-to="3"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/Data/img/MainSlider/1.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Data/img/MainSlider/3.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Data/img/MainSlider/2.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Data/img/MainSlider/4.jpg" class="d-block w-100" alt="...">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#logoImages" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#logoImages" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    }
</header>

